<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.indra.rover.mwsi.ui.fragments.MROCFragment"
    android:padding="10dp"
    android:background="@drawable/bg_dot_pattern">

    <Button
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:text="@string/mr_edit"
        android:id="@+id/btnEditMROC"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:drawableStart="@drawable/ic_edit"
        android:drawableLeft="@drawable/ic_edit"
        android:background="@drawable/btn_active_pink"
        android:textColor="@android:color/white"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/mr_oc_oc1"
        android:id="@+id/textView24"
        android:layout_below="@+id/btnEditMROC"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <Spinner
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/spnOC1"
        android:layout_alignTop="@+id/textView24"
        android:layout_toRightOf="@+id/textView24"
        android:layout_toEndOf="@+id/textView24"
        style="@style/SpinnerTheme"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/lblOC1"
        android:layout_alignTop="@+id/textView24"
        android:layout_toRightOf="@+id/textView24"
        android:layout_toEndOf="@+id/textView24"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/txt_rounded_border"
        android:visibility="gone"
        />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btnImageCapture"
        android:layout_below="@+id/btnEditMROC"
        android:layout_toRightOf="@+id/spnOC1"
        android:layout_toEndOf="@+id/spnOC1"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_camera"
        android:contentDescription="@string/str_address" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnEditMROC"
        android:layout_toRightOf="@+id/btnImageCapture"
        android:layout_toEndOf="@+id/btnImageCapture"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_remove_outline"
        android:background="@drawable/btn_active_pink"
        android:padding="4dp"

        android:id="@+id/btnClrOc1"
        android:contentDescription="@string/str_default_val"
        android:nextFocusLeft="@+id/spnDevCode"
        tools:nextFocusRight="@id/txtMRDRemarks"
        android:visibility="visible"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/mr_oc_oc2"
        android:id="@+id/textView26"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btnImageCapture"
        />

    <Spinner
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:id="@+id/spnOC2"
        style="@style/SpinnerTheme"
        android:layout_alignTop="@+id/textView26"
        android:layout_toRightOf="@+id/textView26"
        android:layout_toEndOf="@+id/textView26"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/lblOC2"
        android:layout_alignTop="@+id/textView26"
        android:layout_toRightOf="@+id/textView26"
        android:layout_toEndOf="@+id/textView26"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/txt_rounded_border"
        android:visibility="gone"
        />


    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btnImageCapture1"
        android:src="@drawable/ic_camera"
        android:layout_alignLeft="@+id/btnImageCapture"
        android:layout_alignStart="@+id/btnImageCapture"
        android:contentDescription="@string/str_address"
        android:layout_below="@+id/btnImageCapture" />
</RelativeLayout>
