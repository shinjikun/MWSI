<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/mr_oc_oc1"
        android:id="@+id/txtOpt"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/lblOpt"
        android:layout_alignTop="@+id/txtOpt"
        android:layout_toRightOf="@+id/txtOpt"
        android:layout_toEndOf="@+id/txtOpt"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/txt_rounded_border"
        android:visibility="gone"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/spnOpt"
        android:layout_alignTop="@+id/txtOpt"
        android:layout_toRightOf="@+id/txtOpt"
        android:layout_toEndOf="@+id/txtOpt"
        style="@style/SpinnerTheme"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toLeftOf="@+id/btnClrOpt"
        android:layout_toStartOf="@+id/btnClrOpt"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_remove_outline"
        android:background="@drawable/btn_active_pink"
        android:padding="4dp"
        android:layout_alignTop="@+id/spnOpt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/btnClrOpt"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:contentDescription="@string/str_default_val" />

</RelativeLayout>