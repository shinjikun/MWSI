<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/fragments_margin"
    android:layout_marginStart="@dimen/fragments_margin"
    android:layout_marginLeft="@dimen/fragments_margin"
    android:layout_marginRight="@dimen/fragments_margin"
    android:layout_marginEnd="@dimen/fragments_margin"
    android:background="@drawable/panel_rounded_border"
    android:id="@+id/parent"
    android:padding="8dp">


    <TextView
        android:layout_width="@dimen/mru_unread"
        android:layout_height="@dimen/mru_unread"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/str_default_val"
        android:id="@+id/txtUnRead"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:background="@color/mru_unreadcolor"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:maxLength="3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/str_mru_unread"
        android:id="@+id/textView3"
        android:layout_below="@+id/txtUnRead"
        android:layout_alignLeft="@+id/txtUnRead"
        android:layout_alignStart="@+id/txtUnRead"
        android:layout_marginTop="20dp"

        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/str_mru_id"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txtMRUID"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_mru_unbilled"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/spacing"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtUnPrinted"
        android:layout_alignTop="@+id/textView5"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:maxLength="3"
        android:text="@string/str_default_val"
        android:layout_marginLeft="@dimen/spacing"
        android:layout_marginStart="@dimen/spacing"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_mru_undelivered"
        android:id="@+id/textView6"
        android:layout_alignTop="@+id/textView5"
        android:layout_toRightOf="@+id/txtUnPrinted"
        android:layout_toEndOf="@+id/txtUnPrinted"
        android:layout_marginLeft="@dimen/spacing15"
        android:layout_marginStart="@dimen/spacing15"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtUnDelivered"
        android:maxLength="3"
        android:text="@string/str_default_val"
        android:layout_alignTop="@+id/textView5"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"
        android:layout_marginLeft="@dimen/spacing"
        android:layout_marginStart="@dimen/spacing"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/str_mru_total"
        android:id="@+id/textView8"
        android:textStyle="bold"
        android:layout_below="@+id/txtUnPrinted"
        android:layout_marginTop="@dimen/spacing"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/str_default_val"
        android:id="@+id/txtMruTotal"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/spacing"
        android:layout_marginLeft="@dimen/spacing"
        android:layout_alignTop="@+id/textView8"
        android:layout_toRightOf="@+id/textView8"
        android:layout_toEndOf="@+id/textView8"
        android:layout_toLeftOf="@+id/txtUnRead"
        android:layout_toStartOf="@+id/txtUnRead"/>
</RelativeLayout>