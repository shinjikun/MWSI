<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.activities.SettingsActivity"
    tools:showIn="@layout/activity_settings"
    android:orientation="vertical"
    android:background="@drawable/bg_dot_pattern">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pair to Bluetooth Printer"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/button2" />

    <LinearLayout
        android:id="@+id/pnl_admin_settings"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/panel_rounded_border"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Rover Administrator Account"
            android:id="@+id/textView30" />
        <Switch
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="GPS Logging"
            android:id="@+id/switch1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"/>

        <Switch
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Print MR Stub Option"
            android:id="@+id/switch2"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@drawable/btn_active_rounded"
            android:textColor="@android:color/white"
            android:padding="10dp"
            android:id="@+id/button4" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/pnl_admin_login"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/panel_rounded_border">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_btn_login"
            android:id="@+id/btnLogin"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@drawable/btn_active_rounded"
            android:textColor="@android:color/white"
            android:padding="10dp"
            android:onClick="onClick"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Rover Admin Settings"
            android:id="@+id/textView31"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
            />
    </RelativeLayout>

</LinearLayout>
