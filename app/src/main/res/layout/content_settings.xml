<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.activities.SettingsActivity"
    tools:showIn="@layout/activity_settings"
    android:orientation="vertical"
    android:background="@drawable/bg_dot_pattern">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pair to Bluetooth Printer"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/button2" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/panel_rounded_border"
        android:padding="10dp"
        android:layout_marginTop="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Rover Administrator Account"
            android:id="@+id/textView30" />
        <Switch
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="GPS Logging"
            android:id="@+id/switch1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"/>

        <Switch
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Print MR Stub Option"
            android:id="@+id/switch2"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meter Code Maintainance"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/btnMeterCodeMain"
            android:onClick="onClick"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/button4" />

    </LinearLayout>

</LinearLayout>
