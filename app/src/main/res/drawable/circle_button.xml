<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/serp_toolbar_dark"/>
        </shape>
    </item>
    <!-- ============================================================================== -->
    <item android:state_enabled="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/serp_toolbar_dark"/>
                </shape>
            </item>

            <item
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                android:bottom="2dp">

                <shape android:shape="oval">
                    <solid android:color="@color/serp_toolbar"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- ============================================================================== -->
    <item android:state_enabled="false">
        <shape android:shape="oval">
            <solid android:color="@color/material_grey_500"/>
        </shape>
    </item>
    <!-- ============================================================================== -->
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/serp_toolbar_dark"/>
                </shape>
            </item>

            <item
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                android:bottom="2dp">

                <shape android:shape="oval">
                    <solid android:color="@color/serp_toolbar"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
