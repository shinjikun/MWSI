<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorAccent"/>
                    <corners
                        android:radius="5dp"/>
                </shape>
            </item>
            <item
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"
                android:bottom="2dp"
                >
                <shape>
                    <solid android:color="#eeeeee"/>
                    <stroke
                        android:width="1dp"
                        android:color="@android:color/darker_gray" />
                    <corners
                        android:radius="5dp" />
                    <padding
                        android:top="0dp"
                        android:bottom="0dp"
                        android:right="0dp"
                        android:left="0dp"/>
                </shape>
            </item>

            <item>
                <bitmap
                    android:gravity="center_vertical|right"
                    android:src="@drawable/ic_spins"/>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#ffffff"/>
                    <stroke
                        android:width="1dp"
                        android:color="@android:color/darker_gray" />
                    <corners
                        android:radius="5dp" />
                    <padding
                        android:top="0dp"
                        android:bottom="0dp"
                        android:right="0dp"
                        android:left="0dp"/>
                </shape>
            </item>

            <item>
                <bitmap
                    android:gravity="center_vertical|right"
                    android:src="@drawable/ic_spins"/>
            </item>
        </layer-list>
    </item>
</selector>